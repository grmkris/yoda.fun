{
  "name": "server",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/server.ts --outfile server",
    "dev": "bun run --hot src/server.ts 2>&1 | tee server.log",
    "start": "bun run dist/server.js",
    "test": "bun test --preload ./test/test.setup.ts",
    "test:watch": "bun test --watch --preload ./test/test.setup.ts",
    "auth:generate": "cli generate",
    "migrate:market-images": "bun run src/scripts/migrate-market-images.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.16.2",
    "@bull-board/hono": "^6.16.2",
    "@hono/mcp": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@yoda.fun/ai": "workspace:*",
    "@yoda.fun/api": "workspace:*",
    "@yoda.fun/cache": "workspace:*",
    "@yoda.fun/markets": "workspace:*",
    "@yoda.fun/auth": "workspace:*",
    "@yoda.fun/blockchain": "workspace:*",
    "@yoda.fun/db": "workspace:*",
    "@yoda.fun/logger": "workspace:*",
    "@yoda.fun/queue": "workspace:*",
    "@yoda.fun/shared": "workspace:*",
    "@yoda.fun/storage": "workspace:*",
    "@yoda.fun/test-utils": "workspace:*",
    "better-auth": "catalog:",
    "hono": "catalog:",
    "neverthrow": "^8.2.0",
    "posthog-node": "catalog:",
    "x402-hono": "^1.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:",
    "@faker-js/faker": "catalog:",
    "@types/bun": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
