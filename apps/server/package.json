{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "bun test --preload ./test/test.setup.ts",
    "test:watch": "bun test --watch --preload ./test/test.setup.ts"
  },
  "dependencies": {
    "hono": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "zod": "catalog:",
    "@yoda.fun/ai": "workspace:*",
    "@yoda.fun/api": "workspace:*",
    "@yoda.fun/auth": "workspace:*",
    "@yoda.fun/db": "workspace:*",
    "@yoda.fun/logger": "workspace:*",
    "@yoda.fun/shared": "workspace:*",
    "@yoda.fun/storage": "workspace:*",
    "@yoda.fun/test-utils": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "@faker-js/faker": "^10.0.0"
  }
}
