{
  "name": "server",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run dist/server.js",
    "lint": "ultracite check",
    "fix": "ultracite fix",
    "fix:unsafe": "ultracite fix --unsafe",
    "test": "bun test --preload ./test/test.setup.ts",
    "test:watch": "bun test --watch --preload ./test/test.setup.ts",
    "auth:generate": "cli generate"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@yoda.fun/ai": "workspace:*",
    "@yoda.fun/api": "workspace:*",
    "@yoda.fun/auth": "workspace:*",
    "@yoda.fun/db": "workspace:*",
    "@yoda.fun/logger": "workspace:*",
    "@yoda.fun/queue": "workspace:*",
    "posthog-node": "catalog:",
    "@yoda.fun/shared": "workspace:*",
    "@yoda.fun/storage": "workspace:*",
    "@yoda.fun/test-utils": "workspace:*",
    "better-auth": "catalog:",
    "hono": "catalog:",
    "x402-hono": "^0.7.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:",
    "@faker-js/faker": "catalog:",
    "@types/bun": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
