{
  "name": "yoda.fun",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.10.7",
      "@orpc/server": "^1.12.1",
      "@orpc/openapi": "^1.12.1",
      "@orpc/zod": "^1.12.1",
      "better-auth": "^1.4.4",
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5.8.2",
      "tsdown": "^0.17.0-beta.4",
      "@orpc/client": "^1.12.1",
      "typeid-js": "^1.2.0",
      "posthog-node": "^5.14.1",
      "drizzle-orm": "^0.44.2",
      "drizzle-zod": "^0.8.3",
      "ioredis": "^5.8.2",
      "bullmq": "^5.65.1",
      "@types/bun": "^1.3.3",
      "@tanstack/react-query": "^5.90.11",
      "ai": "5.0.105",
      "@faker-js/faker": "^10.1.0",
      "@types/node": "^24.10.1",
      "viem": "2.40.3",
      "porto": "^0.2.37",
      "@electric-sql/pglite": "^0.3.14",
      "@orpc/tanstack-query": "^1.12.1",
      "drizzle-kit": "^0.31.7",
      "@better-auth/cli": "^1.4.4",
      "next": "16.0.6",
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "pino": "^10.1.0",
      "pino-http": "^11.0.0",
      "pino-pretty": "^13.1.3",
      "tailwindcss": "^4.1.17",
      "@tailwindcss/postcss": "^4.1.17"
    }
  },
  "scripts": {
    "npkill": "bunx npkill -D -y && rm bun.lock",
    "check": "biome check --write .",
    "format": "turbo format",
    "lint": "turbo lint",
    "fix": "turbo fix",
    "fix:unsafe": "turbo fix:unsafe",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "ci:local": "turbo lint typecheck test build --concurrency=1",
    "ci:quick": "turbo lint typecheck --filter='[HEAD^1]'",
    "ci:full": "bun install && bun run ci:local",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @yoda.fun/db db:push",
    "db:studio": "turbo -F @yoda.fun/db db:studio",
    "db:generate": "turbo -F @yoda.fun/db db:generate",
    "db:migrate": "turbo -F @yoda.fun/db db:migrate",
    "db:start": "turbo -F @yoda.fun/db db:start",
    "db:watch": "turbo -F @yoda.fun/db db:watch",
    "db:stop": "turbo -F @yoda.fun/db db:stop",
    "db:down": "turbo -F @yoda.fun/db db:down",
    "docker:build:web": "docker build -f apps/web/Dockerfile -t yoda-fun-web .",
    "docker:build:server": "docker build -f apps/server/Dockerfile -t yoda-fun-server .",
    "docker:build:all": "bun run docker:build:web && bun run docker:build:server",
    "docker:run:web": "docker run -p 3001:3001 --env-file apps/web/.env yoda-fun-web",
    "docker:run:server": "docker run -p 3000:3000 --env-file apps/server/.env yoda-fun-server"
  },
  "dependencies": {
    "react-card-swiper": "^1.1.25"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "catalog:",
    "tsdown": "catalog:",
    "turbo": "^2.6.1",
    "ultracite": "6.3.8"
  },
  "packageManager": "bun@1.3.3"
}
