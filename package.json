  "name": "yoda.fun",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.11.1",
      "@orpc/server": "^1.13.2",
      "@orpc/openapi": "^1.13.2",
      "@orpc/zod": "^1.13.2",
      "better-auth": "^1.4.10",
      "dotenv": "^17.2.2",
      "zod": "^4.3.4",
      "typescript": "^5.8.2",
      "tsdown": "^0.18.4",
      "@orpc/client": "^1.13.2",
      "typeid-js": "^1.2.0",
      "posthog-node": "^5.18.1",
      "drizzle-orm": "^0.45.1",
      "drizzle-zod": "^0.8.3",
      "ioredis": "^5.8.2",
      "bullmq": "^5.66.4",
      "@types/bun": "^1.3.5",
      "@tanstack/react-query": "^5.90.16",
      "@tanstack/react-query-devtools": "^5.90.12",
      "ai": "^6.0.5",
      "@ai-sdk/react": "^3.0.3",
      "@ai-sdk/anthropic": "^3.0.2",
      "@ai-sdk/google": "^3.0.2",
      "@ai-sdk/openai": "^3.0.1",
      "@ai-sdk/xai": "^3.0.3",
      "@ai-sdk/groq": "^3.0.2",
      "@ai-sdk/devtools": "^0.0.3",
      "neverthrow": "^8.2.0",
      "posthog-js": "^1.306.1",
      "@posthog/ai": "^7.2.0",
      "@faker-js/faker": "^10.1.0",
      "@types/node": "^25.0.3",
      "viem": "^2.43.4",
      "wagmi": "3.1.4",
      "@electric-sql/pglite": "^0.3.14",
      "@orpc/tanstack-query": "^1.13.2",
      "drizzle-kit": "^0.31.8",
      "@better-auth/cli": "^1.4.10",
      "next": "16.1.1",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "pino": "^10.1.0",
      "pino-http": "^11.0.0",
      "pino-pretty": "^13.1.3",
      "tailwindcss": "^4.1.18",
      "@tailwindcss/postcss": "^4.1.18"
    }
  },
  "scripts": {
    "npkill": "bunx npkill -D -y && rm bun.lock",
    "check": "biome check --write .",
    "format": "turbo format",
    "lint": "turbo lint",
    "fix": "turbo fix",
    "fix:unsafe": "ultracite fix --unsafe",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "ci:local": "turbo lint typecheck test build --concurrency=1",
    "ci:quick": "turbo lint typecheck --filter='[HEAD^1]'",
    "ci:full": "bun install && bun run ci:local",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @yoda.fun/db db:push",
    "db:studio": "turbo -F @yoda.fun/db db:studio",
    "db:generate": "turbo -F @yoda.fun/db db:generate",
    "db:migrate": "turbo -F @yoda.fun/db db:migrate",
    "db:start": "turbo -F @yoda.fun/db db:start",
    "db:watch": "turbo -F @yoda.fun/db db:watch",
    "db:stop": "turbo -F @yoda.fun/db db:stop",
    "db:down": "turbo -F @yoda.fun/db db:down",
    "db:clean": "turbo -F @yoda.fun/db db:clean",
    "docker:build:web": "docker build -f apps/web/Dockerfile -t yoda-fun-web .",
    "docker:build:server": "docker build -f apps/server/Dockerfile -t yoda-fun-server .",
    "docker:build:all": "bun run docker:build:web && bun run docker:build:server",
    "docker:run:web": "docker run -p 4201:4201 --env-file apps/web/.env yoda-fun-web",
    "docker:run:server": "docker run -p 4200:4200 --env-file apps/server/.env yoda-fun-server"
  },
  "dependencies": {
    "react-card-swiper": "^1.1.25"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "catalog:",
    "tsdown": "catalog:",
    "turbo": "^2.7.2",
    "ultracite": "7.0.5"
  },
  "packageManager": "bun@1.3.5"
}
