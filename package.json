{
  "name": "yoda.fun",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.10.6",
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.4.1",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.16.6",
      "@orpc/client": "^1.10.0",
      "typeid-js": "^1.2.0",
      "posthog-node": "^5.14.0",
      "drizzle-orm": "^0.44.2",
      "drizzle-zod": "^0.8.3",
      "ioredis": "^5.8.2",
      "bullmq": "^5.64.1",
      "@types/bun": "^1.3.3",
      "@tanstack/react-query": "^5.90.10",
      "ai": "^5.0.101",
      "@faker-js/faker": "^10.1.0",
      "@types/node": "^24.10.1"
    }
  },
  "scripts": {
    "npkill": "bunx npkill -D -y && rm bun.lock",
    "check": "biome check --write .",
    "format": "turbo format",
    "lint": "turbo lint",
    "fix": "turbo fix",
    "fix:unsafe": "turbo fix:unsafe",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "ci:local": "turbo lint typecheck test build --concurrency=1",
    "ci:quick": "turbo lint typecheck --filter='[HEAD^1]'",
    "ci:full": "bun install && bun run ci:local",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @yoda.fun/db db:push",
    "db:studio": "turbo -F @yoda.fun/db db:studio",
    "db:generate": "turbo -F @yoda.fun/db db:generate",
    "db:migrate": "turbo -F @yoda.fun/db db:migrate",
    "db:start": "turbo -F @yoda.fun/db db:start",
    "db:watch": "turbo -F @yoda.fun/db db:watch",
    "db:stop": "turbo -F @yoda.fun/db db:stop",
    "db:down": "turbo -F @yoda.fun/db db:down"
  },
  "dependencies": {
    "react-card-swiper": "^1.1.25",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.6",
    "turbo": "^2.6.1",
    "ultracite": "6.3.6"
  },
  "packageManager": "bun@1.3.3"
}
