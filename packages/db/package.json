{
  "name": "@yoda.fun/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/db.d.ts",
      "default": "./src/db.ts"
    },
    "./schema": {
      "types": "./dist/schema/schema.db.d.ts",
      "default": "./src/schema/schema.db.ts"
    },
    "./drizzle": {
      "types": "./dist/drizzle.d.ts",
      "default": "./src/drizzle.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "lint": "bun ultracite check",
    "fix": "bun ultracite fix",
    "fix:unsafe": "bun ultracite fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "devDependencies": {
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:",
    "tsdown": "catalog:"
  },
  "dependencies": {
    "@electric-sql/pglite": "catalog:",
    "@yoda.fun/logger": "workspace:*",
    "@yoda.fun/shared": "workspace:*",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "zod": "catalog:"
  }
}
