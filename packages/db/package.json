{
  "name": "@yoda.fun/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/db.d.ts",
      "default": "./src/db.ts"
    },
    "./schema/auth": {
      "types": "./dist/schema/auth/index.d.ts",
      "default": "./src/schema/auth/index.ts"
    },
    "./schema/auth/index": {
      "types": "./dist/schema/auth/index.d.ts",
      "default": "./src/schema/auth/index.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "lint": "bun ultracite check",
    "fix": "bun ultracite fix",
    "fix:unsafe": "bun ultracite fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@yoda.fun/shared": "workspace:*",
    "@yoda.fun/logger": "workspace:*",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "zod": "catalog:"
  }
}
