{
  "name": "@yoda.fun/api",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "lint": "bun ultracite check",
    "fix": "bun ultracite fix",
    "fix:unsafe": "bun ultracite fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@orpc/server": "catalog:",
    "@orpc/client": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:",
    "@yoda.fun/auth": "workspace:*",
    "@yoda.fun/db": "workspace:*",
    "@yoda.fun/shared": "workspace:*"
  }
}
